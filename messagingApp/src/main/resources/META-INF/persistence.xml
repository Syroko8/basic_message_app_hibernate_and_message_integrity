<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="example-unit">
        <class>com.example.model.UserPublicKey</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/messaging_app"/>
            <!--Set the user and password here.-->
            <property name="javax.persistence.jdbc.user" value="Set the user here"/>
            <property name="javax.persistence.jdbc.password" value="Set the password here"/>
            
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
